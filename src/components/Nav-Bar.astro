</div>
<div class="menu" id="menu">
    <ul>
        <li><a data-text="INICIO" href="/inicio">INICIO</a></li>
        <li><a data-text="CALIBRACION" href="/calibracion">CALIBRACION</a></li>
        <li><a data-text="SUBIR IMAGEN" href="/upload">SUBIR IMAGEN</a></li>
        <li><a data-text="DETECCION" href="/deteccion">DETECCION</a></li>
        <li><a data-text="ESTADISTICAS" href="/estadistica">ESTADISTICAS</a></li>
    </ul>
</div>

<script is:inline>
    document.addEventListener("DOMContentLoaded", function() {
        const toggleButton = document.getElementById('toggle-button');
        const menu = document.getElementById('menu');

        toggleButton?.addEventListener('click', function() {
            menu?.classList.toggle('active');
            // Bloquear/desbloquear el scroll en el cuerpo de la página
            if (menu.classList.contains('active')) {
                document.body.style.overflow = 'hidden';
            } else {
                document.body.style.overflow = 'auto';
            }
        });

        menu.querySelectorAll('a').forEach(link => {
            link.addEventListener('click', () => {
                menu.classList.remove('active');  
                // Restaurar el scroll en el cuerpo de la página
                document.body.style.overflow = 'auto';
            });
        });
    });
</script>

