.bar{
    width: 1.9rem;
    height: 1.5px;

    border-radius: 2px;
    background-color: #eee;
    transition: .5s ;
    position: relative;
}

.bar::before, .bar::after{
    content: "";

    position: absolute;
    width: inherit;
    height: inherit;
    background: #eee;
    transition: .5s;
}

.bar::before{
    transform: translateY(-9px);
}

.bar::after{
    transform: translateY(9px);
}

.container.active .bar{
    transform: rotate(360deg);
    background-color: transparent;
}

.main{
