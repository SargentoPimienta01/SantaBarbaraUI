<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <!-- Include Driver.js CSS via CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/driver.js@1.3.1/dist/driver.css"/>
    <style>
        /* Custom styling for Driver.js */
        .custom-popover {
            background-color: #ffffff;
            color: #333333;
            border: 1px solid #29b546;
            border-radius: 8px;
            padding: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .driver-active .driver-overlay {
            background: rgba(0, 0, 0, 0.7);
        }

        .custom-popover .driver-popover-arrow {
            border-color: #29b546;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="navbar">
            <div class="menu" id="menu">
                <h3 class="logo" id="logo">Granja <span>Santa Barbara</span></h3>
                <div class="hamburger-menu" id="hamburger">
                    <div class="bar"></div>
                </div>
            </div>
        </div>

        <div class="main-container" id="main">
            <div class="main">
                <header>
                    <div class="overlay">
                        <div class="inner">
                            <h2 class="title">DETECCIÓN DE INVIABILIDAD</h2>
                            <p>
                                Este aplicativo está diseñado para optimizar la incubación y crianza de aves mediante el análisis avanzado de imágenes.
                            </p>
                            <button class="btn" id="estadisticas">
                                <a href="/estadisticas">Estadísticas</a>
                            </button>
                        </div>
                    </div>
                </header>
            </div>
            <div class="shadow one"></div>
            <div class="shadow two"></div>
        </div>

        <div class="links" id="links">
            <ul>
                <li><a href="/">INICIO</a></li>
                <li><a href="/calibracion">CALIBRACIÓN</a></li>
                <li><a href="/upload">SUBIR IMAGEN</a></li>
                <li><a href="/deteccion">DETECCIÓN</a></li>
                <li><a href="#">ESTADÍSTICAS</a></li>
            </ul>
        </div>
    </div>

    <!-- Include Driver.js JavaScript via CDN -->
    <script src="https://cdn.jsdelivr.net/npm/driver.js@1.3.1/dist/driver.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const hamburgerMenu = document.querySelector(".hamburger-menu");
            const container = document.querySelector(".container");

            hamburgerMenu?.addEventListener("click", () => {
                container?.classList.toggle("active");
            });

            // Initialize Driver.js using lowercase 'driver'
            const tourDriver = driver({
                animate: true,
                opacity: 0.75,
                padding: 10,
                showButtons: true,
                doneBtnText: "Entendido",
                closeBtnText: "Cerrar",
                nextBtnText: "Siguiente",
                prevBtnText: "Anterior",
                popoverClass: 'custom-popover'
            });

            // Define tour steps
            tourDriver.defineSteps([
                {
                    element: '#menu',
                    popover: {
                        title: 'Menú Principal',
                        description: 'Este es el menú principal de la aplicación.'
                    }
                },
                {
                    element: '#hamburger',
                    popover: {
                        title: 'Menú Hamburguesa',
                        description: 'Haz clic aquí para abrir y cerrar el menú de navegación.'
                    }
                },
                {
                    element: '#logo',
                    popover: {
                        title: 'Logo de la Granja',
                        description: 'Este es el logo de la Granja Santa Barbara.'
                    }
                },
                {
                    element: '#main',
                    popover: {
                        title: 'Aplicación de Detección de Inviabilidad',
                        description: 'Aquí puedes encontrar información sobre la detección de inviabilidad en los huevos COBB 500.'
                    }
                },
                {
                    element: '#estadisticas',
                    popover: {
                        title: 'Estadísticas',
                        description: 'Haz clic aquí para ver las estadísticas relacionadas con la detección de inviabilidad.'
                    }
                },
                {
                    element: '#links',
                    popover: {
                        title: 'Enlaces de Navegación',
                        description: 'Estos enlaces permiten navegar entre las secciones de la aplicación.'
                    }
                }
            ]);

            // Start the Driver.js tour
            tourDriver.start();
        });
    </script>

