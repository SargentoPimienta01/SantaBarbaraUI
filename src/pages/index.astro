---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Granja Santa Barbara.">
	<div class="container">
        <div class="main">
            <header>
                <div class="overlay">
                    <div class="inner">
                        <h2 class="title">Detecci√≥n de Inviabilidad en Huevos</h2>
                        <p>
                            Discover the wonders of nature, where every moment is a masterpiece of tranquility and harmony.
                            Immerse yourself in the serene landscapes and let the soothing embrace of the natural world captivate your soul.
                        </p>
                        <button class="btn">
                            Explore Nature
                        </button>
                    </div>
                </div>
            </header>
        </div>
    </div>
</Layout>

<style>
* {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
    font-family: "Poppins", sans-serif;
}

html, body {
    overflow: hidden;
    width: 100%;
    height: 100%;
}

.container {
    min-height: 100vh;
    width: 100%;
    background-color: #217c24;
    background-image: linear-gradient(62deg, #217c24 22%, #0b4e0c 100%);
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    transform-style: preserve-3d;
}

.main {
    width: 100%;
    transition: transform 0.5s;
    transform-origin: left;
}

.container.active .main {
    transform: perspective(1300px) rotateY(20deg) translateZ(310px) scale(0.5);
}

header {
    min-height: 100vh;
    width: 100%;
    background: url("../../images/bg.jpg") no-repeat center center / cover;
    position: relative;
}

.overlay {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.4);
    display: flex;
    justify-content: center;
    align-items: center;
}

.inner {
    max-width: 45rem;
    text-align: center;
    color: #fff;
    padding: 0 2rem;
}

.title {
    font-size: 4rem;
}

.btn {
    margin-top: 1rem;
    padding: 0.6rem 1.8rem;
    background-color: #29b546;
    border: none;
    border-radius: 25px;
    color: #fff;
    text-transform: uppercase;
    cursor: pointer;
    text-decoration: none;
    font-size: 1rem;
}
@keyframes appear{
    from{
        opacity: 0;
        transform: translateY(10px);
    }to{
        opacity: 1;
        transform: translateY(0px);
    }
}
.container.active .main:hover{
    transform: perspective(1300px)
                rotateY(20deg)
                translateZ(230px)
                scale(.5);
}
.container.active .main:hover{
    transform: perspective(1300px)
                rotateY(20deg)
                translateZ(230px)
                scale(.5);
}

.container.active .main:hover{
    transform: perspective(1300px)
                rotateY(20deg)
                translateZ(340px)
                scale(.5)
    ;
}
</style>
