---
import Layout from '../layouts/Layout.astro';                                     
import ImageDetection from '../components/Deteccion';

const title = "Análisis y Detección de Imágenes";
const description = "Carga una imagen y analiza los colores dominantes para evaluar la viabilidad visual.";
---
<Layout title={title}>
<div class="w-full flex flex-col items-center py-10 bg-gradient-to-b from-gray-50 to-blue-100 min-h-screen">
    <h1 class="text-3xl font-bold text-gray-800 mb-4">{title}</h1>
    <p class="text-gray-600 text-center mb-8">{description}</p>

    <ImageDetection client:load />
</div>

</Layout>
<style>

    /* Personaliza si es necesario */
</style>
