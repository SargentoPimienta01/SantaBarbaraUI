---
import Layout from '../layouts/Layout.astro';                    
import ImageDetection from '../components/Deteccion';

const title = "Análisis y Detección de Imágenes";
const description = "Carga una imagen y analiza los colores dominantes para evaluar la viabilidad visual.";
---
<Layout title={title}>
    <link rel="stylesheet" href="/src/css/global.css">
    <div class="global-container" class="w-full flex flex-col items-center py-10 bg-gradient-to-b from-gray-50 to-blue-100 min-h-screen">
        <h1 class="text-3xl font-bold text-gray-800 mb-4">{title}</h1>
        <p class="text-gray-600 text-center mb-8">{description}</p>

    <ImageDetection client:load />
</div>

</Layout>
<style>
    .detection-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        background: linear-gradient(90deg, #217c24 0%, #0b4e0c 100%);
        color: #fff;
        font-family: "Poppins", sans-serif;
    }
    </style>
