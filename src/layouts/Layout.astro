---
import NavBar from '../components/Nav-Bar.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;

const isHomePage = Astro.request.url === '/';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="/src/css/viewTransition.css">
		<title>{title}</title>
	</head>
	<style>
		@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300&display=swap');

		*{
			padding: 0;
			margin: 0;
			box-sizing: border-box;
			font-family: "Poppins", sans-serif;
		}
		
		body {
			margin: 0;
			padding: 0;
		}
	</style>
	<body class="fade-in" class={isHomePage ? 'no-layout' : 'with-layout'}>

		<NavBar />
			<main id="main-content" class="fade-in">
				<slot />
			</main>
		<Footer />
		<script type="module" src="/src/scripts/viewTransition.js"></script>
	</body>
</html>





